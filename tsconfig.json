{
  "compilerOptions": {
    "lib": [
      "es2017",
      "dom"
    ],
    "strict": true,
    "noImplicitAny": false,
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "declaration": true,
    "outDir": "dist"
  },
  "include": [
    "src/**/*.ts"
  ]
}